{% extends 'base.html.twig' %}

{% block title %}Hello AsignaturasController!{% endblock %}

{% block body %}

    <div class="container ">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">nombre</th>
                <th scope="col">titulacion</th>
                <th scope="col">creditos</th>
                <th scope="col">curso</th>
                <th scope="col">Max. alumnos</th>
                <th scope="col">alumnos</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{ asignatura.id ? asignatura.id : "" }}</th>
                    <td>{{ asignatura.nombre ? asignatura.nombre : ""}}</td>
                    <td>{{ asignatura.titulacion ? asignatura.titulacion : ""}}</td>
                    <td>{{ asignatura.creditos ? asignatura.creditos : ""}}</td>
                    <td>{{ asignatura.curso ? asignatura.curso|date() : ""}}</td>
                    <td>{{ asignatura.maxalumnos ? asignatura.maxalumnos : ""}}</td>
                    <td>
                        {% for alumno in asignatura.getAlumnos %}
                            <a href="{{ path('alumno',{'id':alumno.getId}) }}"><li>{{ alumno.getId ~ ' ' ~ alumno.getNombre ~ ' ' ~ alumno.getApellidos  }}</li></a>
                        {% endfor %}
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

{% endblock %}
