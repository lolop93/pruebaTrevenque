{% extends 'base.html.twig' %}

{% block body %}
    {{ dump() }}

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.primeraConvocatoria) }}
                    {{ form_widget(form.primeraConvocatoria,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.segundaConvocatoria) }}
                    {{ form_widget(form.segundaConvocatoria,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.asignatura) }}
                    {{ form_widget(form.asignatura,{'attr':{'class':'form-control'}}) }}
                </div>

                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                </div>


                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}